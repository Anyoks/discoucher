= simple_form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :year
    = f.text_field :year
  .field
    / = f.label :book
    = f.association :establishment, label_method: :name, value_method: :id, include_blank: false
  .actions
    = f.submit 'Save'
