%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "UTF-8"}/
    %title DisCoucher | Register Book
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
    :javascript
      function delayedRedirect(){
          window.location = "http://www.discoucher.com/"
      }
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    = csrf_meta_tags
  %body.show{:onload => "setTimeout('delayedRedirect()', 3000)"}
    .row
      .col-md-12
        .box.box-default
          .box-body 
        .col-md-4
          / %img.rounded.mx-auto.d-block{:alt => "logo", :src => "/assets/logo-white.png"}
        .col-md-4
          .alert.alert-success.alert-dismissible
            %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} Ã—
            %h4
              %i.icon.fa.fa-check
              Success!
            Book Registration was successful!
            You'll be redirected soon!

        .col-md-4
          / %img.rounded.mx-auto.d-block{:alt => "logo", :src => "/assets/logo-white.png"}

      
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
