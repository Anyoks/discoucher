%section.content-header
  %h1
    DisCoucher Users
    %small All Users in the database #{@users.all.count}
  %h1
    / %small Most active user #{@most_active[0]}, with #{@most_active[1]} Voucher redemptions || Least active user #{@least_active[0]}, with #{@least_active[1]} Voucher redemptions

  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Level
    %li.active Here

%br
.row
  .col-lg-3.col-xs-6
    / small box
    .small-box.bg-yellow
      .inner
        %h3 #{@users.all.count}
        %p Total Users
      .icon
        %i.ion.ion-person-add
      %a.small-box-footer{:href => "#"}
        More info
        %i.fa.fa-arrow-circle-right
  / ./col
  .col-lg-3.col-xs-6
    / small box
    .small-box.bg-green
      .inner
        %h3 
          #{@most_active[0]}
          %sup{:style => "font-size: 20px"} #{@most_active[1]}
        %p Most active User
      .icon
        %i.ion.ion-person
      %a.small-box-footer{:href => "#"}
        More info
        %i.fa.fa-arrow-circle-right
  / ./col
  .col-lg-3.col-xs-6
    / small box
    .small-box.bg-red
      .inner
        %h3
          #{@least_active[0]}
          %sup{:style => "font-size: 20px"} #{@least_active[1]}
        %p Least Active User
      .icon
        %i.ion.ion-stats-bars
      %a.small-box-footer{:href => "#"}
        More info
        %i.fa.fa-arrow-circle-right
  / ./col
  .col-lg-3.col-xs-6
    / small box
    .small-box.bg-aqua
      .inner
        %h3
          1
          / %sup{:style => "font-size: 20px"} redemptions
        %p In Active Users
      .icon
        %i.ion.ion-stats-bars
      %a.small-box-footer{:href => "#"}
        More info
        %i.fa.fa-arrow-circle-right
  / ./col

%br
.row-fluid
  .col-md-6
    .box.box-danger
      .box-header.with-border
        %h3.box-title 
        Vists per Establishment (Vouchers redeemed per establishment)
        .box-tools.pull-right
          %button.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
            %i.fa.fa-minus
          %button.btn.btn-box-tool{"data-widget" => "remove", :type => "button"}
            %i.fa.fa-times
      .box-body
        = doughnut_chart @data , @options
.row-fluid
  .col-md-6
    .box.box-danger
      .box-header.with-border
        %h3.box-title 
        Overall vists by month
        .box-tools.pull-right
          %button.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
            %i.fa.fa-minus
          %button.btn.btn-box-tool{"data-widget" => "remove", :type => "button"}
            %i.fa.fa-times
      .box-body
        = bar_chart @vists_data , @options1



