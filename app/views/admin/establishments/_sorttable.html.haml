.row
  .col-xs-12
    .box
      .box-header
        %h3.box-title Establishment
      / /.box-header
      .box-body
        #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
          .row
            .col-sm-5
              .page_info
                / = page_entries_info establishments
            .col-sm-7
              .digg_pagination
                / = will_paginate establishments 
            .col-sm-6
              #example1_length.dataTables_length
                %label
                  Show
                  %select.form-control.input-sm{"aria-controls" => "example1", :name => "example1_length"}
                    %option{:value => "10"} 10
                    %option{:value => "25"} 25
                    %option{:value => "50"} 50
                    %option{:value => "100"} 100
                  entries
            .col-sm-6
              #example1_filter.dataTables_filter
                %label
                  Search:
                  %input.form-control.input-sm{"aria-controls" => "example1", :placeholder => "", :type => "search"}/
          .row
            .col-sm-12
              %table#example1.table.table-bordered.table-striped.dataTable{"aria-describedby" => "example1_info", :role => "grid"}
                %thead
                  %tr{:role => "row"}
                    %th.sorting_asc{"aria-controls" => "example1", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1", :style => "width: 182px;", :tabindex => "0"} 
                      %select.form-control.input-sm{"aria-controls" => "example1", :name => "example1_length"}
                       
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "Browser: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Location
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "Platform(s): activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Area
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 156px;", :tabindex => "0"} Contact Phone
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 156px;", :tabindex => "0"} Address
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 156px;", :tabindex => "0"} Logo
                    / %th.sorting{"aria-controls" => "example1", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 113px;", :tabindex => "0"} Options
                
      / /.box-body
    / /.box
  / /.col
  %h1 Students
  = form_for_filterrific @filterrific do |f|
    %div
      / Type
      / = f.select(:with_type, @filterrific.select_options[:with_type],{ include_blank: '- Any -' })
    %div
      / Location
      / = f.select(:with_location,@filterrific.select_options[:with_location],{ include_blank: '- Any -' })
    %div
      Area
      = f.select(:with_area, @filterrific.select_options[:with_area])
    %div
      = link_to('Reset filters', reset_filterrific_url) 
    = render_filterrific_spinner

  / = render(partial: 'sorttable',locals: { students: @establishment })

