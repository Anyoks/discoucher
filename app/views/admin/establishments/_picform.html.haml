= simple_form_for [:admin, @establishment],:url =>  new_admin_establishment_picture_path, :method => :post, html: { multipart: true } do |f|
  - if @establishment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@establishment.errors.count, "error")} prohibited this establishment from being saved:"
      %ul
        - @establishment.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :logo
    = f.file_field :logo

  .control-group
    = f.label :pictures, :class => 'control-label'
    .controls
      = file_field_tag "images[]", type: :file, multiple: true

  
  .actions
    = f.submit 'Save'
