.row
  .col-xs-12
    .box
      .box-header
        %h3.box-title Reviews
        .box-tools.pull-right
          .digg_pagination
            = will_paginate reviews 
      / /.box-header
      .box-body
        #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
          .row
            %br
          .row
            .col-sm-12
              %table#example1.table.table-bordered.table-striped.dataTable{"aria-describedby" => "example1_info", :role => "grid"}
                %thead
                  %tr{:role => "row"}
                    %th.sorting_asc{"aria-controls" => "example1", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Establishment Name
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Browser: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 80px;", :tabindex => "0"} Voucer Code
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Browser: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 200px;", :tabindex => "0"} User Comments
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Platform(s): activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 80px;", :tabindex => "0"} Customer
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 50px;", :tabindex => "0"} Rating
                    -# %th.sorting{"aria-controls" => "example1", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 50px;", :tabindex => "0"} Options
                %tbody
                  - if reviews.present?
                    - reviews.each do |review|

                      %tr{:class => "#{cycle('even', 'odd')}"}
                        %td.sorting_1= review.voucher.establishment.name
                        %td= review.voucher.code
                        %td= review.comment
                        %td= review.user.full_names
                        %td 
                          - review.rating.to_i.times do
                            %span.glyphicon.glyphicon-star.text-success
                          - review.blank_stars.to_i.times do
                            %span.glyphicon.glyphicon-star-empty.text-success
                  - else
                    %tr{:class => "#{cycle('even', 'odd')}"}
                      %td.sorting_1= "No reviews"
                %tfoot
                  %tr
                    %th{:colspan => "1", :rowspan => "1"} Establishment Name
                    %th{:colspan => "1", :rowspan => "1"} Voucher Code
                    %th{:colspan => "1", :rowspan => "1"} Comments
                    %th{:colspan => "1", :rowspan => "1"} Customer
                    %th{:colspan => "1", :rowspan => "1"} Rating            
                    -# %th{:colspan => "1", :rowspan => "1"} Options
          .row
            .col-sm-5
              .page_info
                = page_entries_info reviews
            .col-sm-7
              .digg_pagination
                = will_paginate reviews 
      / /.box-body
    / /.box
  / /.col