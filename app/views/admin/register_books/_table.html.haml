.row
  .col-xs-12
    .box
      .box-header
        %h3.box-title Registered Books In the Database
      / /.box-header
      .box-body
        #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
          .row
            .col-sm-5
            .col-sm-7
              .digg_pagination
                = will_paginate register_books 
            /   #example1_length.dataTables_length
            /     %label
            /       Show
            /       %select.form-control.input-sm{"aria-controls" => "example1", :name => "example1_length"}
            /         %option{:value => "10"} 10
            /         %option{:value => "25"} 25
            /         %option{:value => "50"} 50
            /         %option{:value => "100"} 100
            /       entries
            / .col-sm-6
            /   #example1_filter.dataTables_filter
            /     %label
            /       Search:
            /       %input.form-control.input-sm{"aria-controls" => "example1", :placeholder => "", :type => "search"}/
          .row
            .col-sm-12
              %table#example1.table.table-bordered.table-striped.dataTable{"aria-describedby" => "example1_info", :role => "grid"}
                %thead
                  %tr{:role => "row"}
                    %th.sorting_asc{"aria-controls" => "example1", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1", :style => "width: 182px;", :tabindex => "0"} First name
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Browser: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Last name
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Platform(s): activate to sort column ascending", :colspan => "", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Phone Number
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 156px;", :tabindex => "0"} Email
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 113px;", :tabindex => "0"} Options
                %tbody
                  - register_books.each do |register_book|
                    
                    %tr{:class => "#{cycle('even', 'odd')}"}
                      %td= register_book.first_name
                      %td= register_book.last_name
                      %td= register_book.phone_number
                      %td= register_book.email
                      %td= register_book.book_code
                      %td 
                        -if current_admin && current_admin.is_previlaged?
                          = link_to "Show",admin_user_path(register_book.user), class: "label label-warning"
                %tfoot
                  %tr
                    %th{:colspan => "1", :rowspan => "1"} First Name
                    %th{:colspan => "1", :rowspan => "1"} Last Name
                    %th{:colspan => "1", :rowspan => "1"} Phone Number
                    %th{:colspan => "1", :rowspan => "1"} Email
                    %th{:colspan => "1", :rowspan => "1"} Options
          .row
            .col-sm-5
              .page_info
                = page_entries_info register_books
            .col-sm-7
              .digg_pagination
                = will_paginate register_books 
      / /.box-body
    / /.box
  / /.col