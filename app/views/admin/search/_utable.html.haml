%table.table.table-hover
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Phone Number
      %th

  %tbody
    - if results.nil? 
      %tr
        %td "No Results"
    -else
      - results.results.each do |result|
        %tr
          %td= result._source.first_name
          %td= result._source.last_name
          %td= result._source.email
          %td= result._source.phone_number
          %td
          
          %td
            -if current_admin && current_admin.is_admin?
              / = link_to 'Edit', edit_admin_results_path(results), class: "label label-default"
              / = link_to "Show",admin_results_path(results), class: "label label-warning"
              / = link_to 'Destroy', admin_results_path(results), :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "label label-danger"